<%- include('../partials/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-dark">
                    <h1 class="text-light"><%= garment.name %></h1>
                    <ul class="text-light">
                        <li>Location : <%= garment.location %></li>
                        <li>Kontak : <%= garment.contact %></li>
                    </ul>
                </div>
                <div class="card-body bg-dark">
                    <h2 class="card-title text-light"> garment products</h2>
                        <ul>
                            <% for( let product of garment.products ) { %>
                            <li><a href="/products/<%= product.id %>"class="btn btn-primary my-2"> <%= product.name %> - <%= product.brand %> </a></li>
                            <% } %>
                        </ul>
                        <a href="/products/<%= garment._id %>/edit" class="btn btn-primary d-block w-25 mx-2 mb-3">&gt; Edit A garment</a>
                        <form action="/garments/<%= garment._id %>?_method=DELETE" method="post">
                            <button type="submit" class="btn btn-danger mb-3 mx-2 w-25">&reg; Delete</button>
                        </form>
                        <a href="/garments/<%= garment._id %>/product/create" class="btn btn-success mx-2 d-block w-25 mb-3">Create Product</a>
                        <a href="/garments" class="btn btn-success d-block w-25 py-2 mx-2 mb-3">&laquo; Back To all garments</a>
                    </div>
            </div>
        </div>
    </div>
</div>






<%- include('../partials/footer') %>